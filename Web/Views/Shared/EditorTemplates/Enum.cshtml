@using Domain.Extensions
@model Enum
@Html.DropDownListFor(m => m, Enum.GetValues(Model.GetType()).Cast<Enum>()
    .Select(m =>
    {
        var enumVal = Enum.GetName(Model.GetType(), m);
        return new SelectListItem
        {
            Text = m.GetDisplay(),
            Value = m.ToString(),
            Selected = Model.ToString() == enumVal
        };
    }))
